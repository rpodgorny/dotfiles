set nocompatible
set encoding=utf-8

set paste

filetype plugin on
filetype plugin indent off
set autoindent
set nocindent
set noexpandtab
set ts=4
set shiftwidth=4

syntax on
set background=dark

inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
